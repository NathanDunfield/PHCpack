# tested with nvcc version 5.5.0 and gcc 4.4.7 on C2050
# Note that the -arch=sm_13 is needed on the C2050.
# tested with nvcc version 10.1 and gcc 4.8.5 on Volta
# On Volta, the -arch=sm_13 is not needed.

gpp=/usr/bin/g++
gcc=/usr/bin/gcc
QDsrc=../../Ada/Math_Lib/QD

dbl_norm_kernels.o:
	@-echo ">>> compiling vector norm kernels for doubles ..."
	nvcc -ccbin=$(gcc) -c dbl_norm_kernels.cu

dbl2_norm_kernels.o:
	@-echo ">>> compiling vector norm kernels for double doubles ..."
	nvcc -ccbin=$(gcc) -c dbl2_norm_kernels.cu

cmplx_norm_kernels.o:
	@-echo ">>> compiling vector norm kernels for complex doubles ..."
	nvcc -ccbin=$(gcc) -c cmplx_norm_kernels.cu

# nvcc -ccbin=$(gcc) -arch=sm_13 -c dbl_norm_kernels.cu

double_double.o:
	@-echo ">>> compiling double_double ..."
	$(gpp) -c -I$(QDsrc) $(QDsrc)/double_double.c

double_double_functions.o:
	@-echo ">>> compiling double double functions ..."
	$(gpp) -O3 -c double_double_functions.cpp

double_double_gpufun.o:
	@-echo ">>> compiling double double gpu functions ..."
	nvcc -ccbin=$(gpp) -c double_double_gpufun.cu

test_double_doubles: double_double.o double_double_functions.o
	@-echo ">>> compiling test_double_doubles ..."
	$(gpp) -c -I$(QDsrc) test_double_doubles.cpp
	@-echo ">>> linking test_double_doubles ..."
	$(gpp) -o test_double_doubles \
                  double_double.o double_double_functions.o \
                  test_double_doubles.o

random_vectors.o:
	@-echo ">>> compiling random data generators ..."
	$(gpp) -O3 -c random_vectors.cpp

parse_run_arguments.o:
	@-echo ">>> compiling parse_run_arguments ..."
	$(gpp) -O3 -c parse_run_arguments.cpp

dbl_norm_host.o:
	@-echo ">>> compiling dbl_norm_host ..."
	$(gpp) -O3 -c dbl_norm_host.cpp

dbl2_norm_host.o:
	@-echo ">>> compiling dbl2_norm_host ..."
	$(gpp) -O3 -c dbl2_norm_host.cpp

cmplx_norm_host.o:
	@-echo ">>> compiling cmplx_norm_host ..."
	$(gpp) -O3 -c cmplx_norm_host.cpp

cmplx2_norm_host.o:
	@-echo ">>> compiling cmplx2_norm_host ..."
	$(gpp) -O3 -c cmplx2_norm_host.cpp

run_dbl_norm.o:
	@-echo ">>> compiling run_dbl_norm ..."
	$(gpp) -I/usr/local/cuda/include -O3 -c run_dbl_norm.cpp

run_dbl2_norm.o:
	@-echo ">>> compiling run_dbl2_norm ..."
	$(gpp) -I/usr/local/cuda/include -O3 -c run_dbl2_norm.cpp

run_cmplx_norm.o:
	@-echo ">>> compiling run_cmplx_norm ..."
	$(gpp) -I/usr/local/cuda/include -O3 -c run_cmplx_norm.cpp

test_dbl_norm.o:
	@-echo ">>> compiling test_dbl_norm ..."
	$(gpp) -I/usr/local/cuda/include -O3 -c test_dbl_norm.cpp

test_dbl2_norm.o:
	@-echo ">>> compiling test_dbl2_norm ..."
	$(gpp) -I$(QDsrc) -I/usr/local/cuda/include -O3 -c test_dbl2_norm.cpp

test_cmplx_norm.o:
	@-echo ">>> compiling test_cmplx_norm ..."
	$(gpp) -I/usr/local/cuda/include -O3 -c test_cmplx_norm.cpp

test_cmplx2_norm.o:
	@-echo ">>> compiling test_cmplx2_norm ..."
	$(gpp) -I$(QDsrc) -I/usr/local/cuda/include -O3 \
               -c test_cmplx2_norm.cpp

run_dbl_norm: dbl_norm_kernels.o dbl_norm_host.o random_vectors.o \
              parse_run_arguments.o run_dbl_norm.o
	@-echo ">>> linking ..."
	$(gpp) -o run_dbl_norm dbl_norm_kernels.o dbl_norm_host.o \
                  random_vectors.o parse_run_arguments.o run_dbl_norm.o \
            -lcuda -lcudart -L/usr/local/cuda/lib64 

run_dbl2_norm: dbl2_norm_kernels.o dbl2_norm_host.o random_vectors.o \
               parse_run_arguments.o run_dbl2_norm.o double_double_functions.o
	@-echo ">>> linking ..."
	$(gpp) -o run_dbl2_norm dbl2_norm_kernels.o dbl2_norm_host.o \
                  random_vectors.o parse_run_arguments.o \
                  double_double_functions.o run_dbl2_norm.o \
            -lcuda -lcudart -L/usr/local/cuda/lib64 

run_cmplx_norm: cmplx_norm_kernels.o cmplx_norm_host.o random_vectors.o \
                parse_run_arguments.o run_cmplx_norm.o
	@-echo ">>> linking ..."
	$(gpp) -o run_cmplx_norm cmplx_norm_kernels.o cmplx_norm_host.o \
                  random_vectors.o parse_run_arguments.o run_cmplx_norm.o \
               -lcuda -lcudart -L/usr/local/cuda/lib64 

test_dbl_norm: dbl_norm_kernels.o dbl_norm_host.o random_vectors.o \
               test_dbl_norm.o
	@-echo ">>> linking ..."
	$(gpp) -o test_dbl_norm dbl_norm_kernels.o dbl_norm_host.o \
                  random_vectors.o test_dbl_norm.o \
               -lcuda -lcudart -L/usr/local/cuda/lib64 

test_dbl2_norm: double_double.o double_double_functions.o random_vectors.o \
                dbl2_norm_host.o test_dbl2_norm.o dbl2_norm_kernels.o
	@-echo ">>> linking ..."
	$(gpp) -o test_dbl2_norm double_double.o double_double_functions.o \
                  random_vectors.o dbl2_norm_host.o \
                  dbl2_norm_kernels.o test_dbl2_norm.o \
               -lcuda -lcudart -L/usr/local/cuda/lib64 

test_cmplx_norm: cmplx_norm_kernels.o cmplx_norm_host.o random_vectors.o \
                 test_cmplx_norm.o
	@-echo ">>> linking ..."
	$(gpp) -o test_cmplx_norm cmplx_norm_kernels.o cmplx_norm_host.o \
                  random_vectors.o test_cmplx_norm.o \
               -lcuda -lcudart -L/usr/local/cuda/lib64 

test_cmplx2_norm: random_vectors.o double_double.o double_double_functions.o \
                  cmplx2_norm_host.o test_cmplx2_norm.o
	@-echo ">>> linking ..."
	$(gpp) -o test_cmplx2_norm cmplx2_norm_host.o \
                  double_double.o double_double_functions.o \
                  random_vectors.o test_cmplx2_norm.o \
               -lcuda -lcudart -L/usr/local/cuda/lib64 

clean:
	/bin/rm -f -r double_double.o double_double_functions.o
	/bin/rm -f -r test_double_doubles.o test_double_doubles
	/bin/rm -f -r random_vectors.o parse_run_arguments.o
	/bin/rm -f -r run_dbl_norm.o run_dbl_norm
	/bin/rm -f -r test_dbl_norm.o test_dbl_norm
	/bin/rm -f -r run_dbl2_norm.o run_dbl2_norm
	/bin/rm -f -r test_dbl2_norm.o test_dbl2_norm
	/bin/rm -f -r run_cmplx_norm.o run_cmplx_norm
	/bin/rm -f -r test_cmplx_norm.o test_cmplx_norm
	/bin/rm -f -r test_cmplx2_norm.o test_cmplx2_norm
	/bin/rm -f -r dbl_norm_kernels.o dbl_norm_host.o
	/bin/rm -f -r dbl2_norm_kernels.o dbl2_norm_host.o
	/bin/rm -f -r cmplx_norm_kernels.o cmplx_norm_host.o
	/bin/rm -f -r cmplx2_norm_host.o
	/bin/rm -f -r double_double_gpufun.o
